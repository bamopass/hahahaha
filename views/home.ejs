
<%- include('partials/header'); -%>

<form action="/searchMovies" method="post">
  <!-- search section -->
  <div class="container-fluid">
    <div class="row">
      <!-- <form action="/searchMovie" method="post"> -->
        <div class="col-5">

          <select class="selectpicker form-control-sm" title="Find All Movies" data-live-search="true" data-width="42%" data-style="btn-dark" name="SearchMovie" required>
            <% movies.forEach(function(movie){ %>
              <option class="opt-style" value="<%=movie.movieID%>"><%=movie.movieName%></option>
          <% }); %> 
          </select>

          <select class="selectpicker form-control-sm" title="at Selected Branches" data-live-search="true"
                  data-width="56%" data-style="btn-dark" name="SearchBranch" required>
                  <% branchs.forEach(function(branch){ %>
                    <option class="opt-style" value="<%=branch.branchID%>"><%=branch.branchName%></option>
                <% }); %> 
            </select>      
        </div>
        <div class="col-3">
          <button class="button btn-showtime" type="submit">Showtime</button> 
        </div>
      <!-- </form> -->

      <div class="col-3">
        <div class="form-inline search">
          <input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search...">
          <span><i class="fa fa-search" aria-hidden="true"></i></span>
      </div>
      </div>
    </div>
  </div>
</form>

